# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_KEY=your_service_role_or_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# WhatsApp Cloud API Configuration
WHATSAPP_PHONE_NUMBER_ID=123456789
WHATSAPP_ACCESS_TOKEN=EAA...
WHATSAPP_VERIFY_TOKEN=your_verify_token
WHATSAPP_API_VERSION=v18.0

# AI Provider Configuration
AI_PROVIDER=gemini

# OpenAI Configuration (Optional - if using OpenAI)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_WHISPER_MODEL=whisper-1

# Gemini Configuration (Optional - if using Gemini)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEXT_MODEL=gemini-2.0-flash
GEMINI_AUDIO_MODEL=gemini-2.0-flash

# Application Configuration
APP_BASE_URL=https://your-app.example.com
WEBHOOK_SECRET=some_random_string
MAX_FILE_SIZE_MB=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scheduler Configuration
DAILY_REMINDER_CRON=0 9 * * *
DAILY_REMINDER_TIMEZONE=Asia/Kolkata

# Optional S3/Storage Fallback
S3_ENDPOINT=
S3_BUCKET=
S3_KEY=
S3_SECRET=

# Logging
LOG_LEVEL=info
